<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {% block googlefont %}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
        {% endblock %}

        {% for category, messages in app.flashes %}
            {%  for message in messages %}
        <div class="alert alert-{{ category }}">
            {{ message }}
        </div>
        {% endfor %}
        {% endfor %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-white">
        <a class="navbar-brand" href="/"><img class="ws-logo" src="{{ asset('build/images/ws-logo.jpeg') }}"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" color="black">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-warning" href="#">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-warning" href="{{ path('program_index') }}">Séries</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-warning" href="{{ path('category_index') }}">Catégories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-warning" href="{{ path('actor_index') }}">Acteurs</a>
                </li>
            </ul>
        </div>
    </nav>
        {% block body %}{% endblock %}
    </body>
</html>
