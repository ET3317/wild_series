{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    <div>
        <ul>
            {% for category in categories %}
                <li>{{ loop.index }} / {{ category.name }}</li>
            {% endfor %}
        </ul>
    </div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}